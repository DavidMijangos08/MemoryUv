<Window x:Class="Client.Personalize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Personalize" Height="450" Width="800">
    <Grid x:Name="mainGrid">
        <Button Content="Regresar" HorizontalAlignment="Left" Margin="390,378,0,0" VerticalAlignment="Top" Width="75" Click="ExitClick">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Label Content="Personalize" HorizontalAlignment="Left" Margin="270,31,0,0" FontSize="36" VerticalAlignment="Top" FontFamily="Segoe Script" FontWeight="Bold"/>
        <Label Content="Selecciona tu fondo favorito" HorizontalAlignment="Left" Margin="97,98,0,0" VerticalAlignment="Top" Width="349"/>
        <Button HorizontalAlignment="Left" Height="112" Margin="97,142,0,0" VerticalAlignment="Top" Width="170" Click="GreenClick"  >
            <Button.Background>
                <ImageBrush ImageSource="Resources/Background/backgroundGreen.png"/>
            </Button.Background>
        </Button>
        <Button HorizontalAlignment="Left" Height="112" Margin="173,281,0,0" VerticalAlignment="Top" Width="170" Click="IceClick" >
            <Button.Background>
                <ImageBrush ImageSource="Resources/Background/backgroundIce.png"/>
            </Button.Background>
        </Button>
        <Button HorizontalAlignment="Left" Height="112" Margin="340,142,0,0" VerticalAlignment="Top" Width="170" Click="PinkClick" >
            <Button.Background>
                <ImageBrush ImageSource="Resources/Background/backgroundPink.jpg"/>
            </Button.Background>
        </Button>
        <Button HorizontalAlignment="Left" Height="112" Margin="581,142,0,0" VerticalAlignment="Top" Width="170" Click="RedClick" >
            <Button.Background>
                <ImageBrush ImageSource="Resources/Background/backgroundRed.jpg"/>
            </Button.Background>
        </Button>
        <Button HorizontalAlignment="Left" Height="112" Margin="510,281,0,0" VerticalAlignment="Top" Width="170" Click="XClick" >
            <Button.Background>
                <ImageBrush ImageSource="Resources/Background/backgroundX.jpg"/>
            </Button.Background>
        </Button>
        <Button Content="Restablecer Fondo" HorizontalAlignment="Left" Margin="581,109,0,0" VerticalAlignment="Top" Width="129" Click="DefaultClick">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
